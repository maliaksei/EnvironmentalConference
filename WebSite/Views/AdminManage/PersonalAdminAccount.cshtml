@using Models.Properties
@model Models.ViewModels.PersonalInfoViewModel
@{
    ViewBag.Title = "PersonalAdminAccount";
    Layout = "~/Views/Shared/_LayoutForUserManagePage.cshtml";
}

<h2>@Resources.UserAccount_Header</h2>

<h3>@Resources.PersonalInfo_Headrr</h3>
@{
    var sizeCol = 12;
    var countItems = Model.ViewActiveConferences.ActiveConferences.Count();
    if (countItems != 0)
    {
        sizeCol = 12 / countItems;
    }
}
<form class="form-horizontal" role="form">
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Name, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Patronymic, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Patronymic)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Surname, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Surname)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.AcademicDegree, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.AcademicDegree)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Email, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Email)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.AcademicTitle, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.AcademicTitle)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Organization, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Organization)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Address, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Address)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.UserInfo.Phone, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 form-control-static">
            @Html.DisplayFor(x => x.UserInfo.Phone)
        </div>
    </div>

</form>
<h3>@Resources.ActiveConference_Header</h3>
<div class="row">
    @foreach (var item in Model.ViewActiveConferences.ActiveConferences)
    {
        <div class="col-md-@sizeCol">
            <h4>@item.NameOfTheConference</h4>
            <p>
                @item.BriefInformation
            </p>
            <p>
                @Html.ActionLink(Resources.LearnMore_Button, "DetailsInfoForConference", "AdminManage", new { conferenceId = item.ConferenceId }, new { @class = "btn btn-default" })
            </p>
        </div>
    }
</div>